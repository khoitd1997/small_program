    "version": "0.2.0",
    "configurations": [
        {
            "name": "R5 GDB Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "preLaunchTask": "r5_debug_fsbl_task",
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerServerAddress": "localhost:3000",
            "miDebuggerArgs": "--cd=${command:cmake.launchTargetDirectory}",
            "setupCommands": [
                {
                    "description": "Set the target file",
                    "text": "file ${command:cmake.launchTargetFilename}",
                    "ignoreFailures": false
                },
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],

            "linux": {
                "miDebuggerPath": "/tools/Xilinx/Vitis/2020.1/gnu/armr5/lin/gcc-arm-none-eabi/bin/armr5-none-eabi-gdb",
            }
        }
    ]
}